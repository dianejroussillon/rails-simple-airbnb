<div class="container">
  <div class="row">
    <h1>All the Flats</h1>
  </div>
  <div class="row">
        <% @flats.each do |flat| %>
        <div class="flat-card col-lg-4"><%= image_tag "image1.jpg", height: 150 %><%= link_to flat.name, flat_path(flat) %>
        </div>
         <% end %>
  </div>
  <div class="row">
    <%= link_to "Add a flat", new_flat_path, class: 'btn' %>
  </div>
</div>

